@ECHO OFF
ATTRIB -H -S %CD%\.ACCESSORS

ECHO -----ENCRYPTING-----
CIPHER /E /S:%CD%\

:: ECHO -----OVERWRITING DELETED DATA-----
:: CIPHER /W:%CD%

ECHO -----DECRYPTING COMPONENTS-----
CIPHER /D /S:%CD%\.ACCESSORS\
CIPHER /D %0

ECHO -----UPDATING CURRENT USER-----
CIPHER /REKEY /S:%CD%\

ECHO -----UPDATING ACCESSORS-----
IF NOT EXIST %CD%\.ACCESSORS MKDIR %CD%\.ACCESSORS
FORFILES /P %CD%\.ACCESSORS /M *.cer /C "CMD /C CIPHER /ADDUSER /CERTFILE:@path /S:%CD%\"
::FOR /F "delims==" %%F in ('DIR /b %CD%\.ACCESSORS') do CIPHER /ADDUSER /CERTFILE:"%CD%\.ACCESSORS\%%F" /S:%CD%\

ECHO Done.
PAUSE
ATTRIB +H +S %CD%\.ACCESSORS
